{% extends 'layout.html.twig' %}
{% block content %}

    
<div class="col-md-8">
    <h1>Minhas Reclamações</h1>
    <div class="btn-group">
        <button type="button" id="adicionar" class="btn btn-success">Adicionar Reclamação</button>
    </div>
    <br />
    <br />
                {% for reclamacao in aLista %}
                    <div class="panel-group" id="accordion">
                      <div class="panel panel-default">
                        <div class="panel-heading">
                          <h4 class="panel-title">
                              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" id="{{reclamacao.id}}" >
                              {{reclamacao.titulo}} 
                            </a>
                          </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                          <div class="panel-body">
                            {{reclamacao.descricao}}
                          </div>
                        </div>
                      </div>
                  </div>

                {% endfor %}
        
</div>
        {% include "pagination.html.twig" %}
{% endblock %}
